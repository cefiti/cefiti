{
  "name": "cefiti",
  "version": "5.2.27",
  "description": "Catálogo de Exigências Fitossanitárias para o Trânsito Interestadual",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cefiti/cefiti.git"
  },
  "bugs": {
    "url": "https://github.com/cefiti/cefiti/issues"
  },
  "keywords": [],
  "authors": [
    "Dalci de Jesus Bagolin",
    "Omar Roberto da Silveira"
  ],
  "license": "MIT",
  "homepage": ".",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "zip": "jszip ./build -o ./build/CEFiTI.zip",
    "deploy": "jszip -c package.json -o CEFiTI%npm_package_version%.zip",
    "analyze": "source-map-explorer build/static/js/*",
    "lint": "eslint --ignore-pattern ./assests/**/* --ext .ts,.tsx .",
    "esbuild": "esbuild src/index.tsx --bundle --outdir=web --inject:src/react-shim.js --splitting --format=esm --define:process.env.NODE_ENV=\\\"production\\\" --target=es2015 --minify --sourcemap",
    "dev": "esbuild src/index.tsx --bundle --outdir=web --inject:src/react-shim.js --splitting --format=esm --define:process.env.NODE_ENV=\\\"development\\\" ",
    "watch": "node fast-watch src npm run dev"
  },
  "dependencies": {
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "valtio": "^0.4.3"
  },
  "devDependencies": {
    "@types/d3-array": "^2.0.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.07.11",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "d3-array": "^2.3.2",
    "jszip-cli": "^1.4.24",
    "source-map-explorer": "^2.1.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "eslintIgnore": [
    "/assests/**/*",
    "assets/**/*"
  ],
  "entities": [
    {
      "name": "./build",
      "root": true
    },
    "./build/CEFiTI.zip"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "esbuild-jest"
    }
  }
}
