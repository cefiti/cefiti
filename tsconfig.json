{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "build",
        "strict": true,
        "noEmitHelpers": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules"
    ]
}